@model FightData.Domain.EntityCreation.ExhibitionForm

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Exhibition</h4>
<hr />

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Exhibition.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Exhibition.Id)
                @Html.EditorFor(model => model.Exhibition.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Exhibition.Name, "", new { @class = "text-danger" })
            </div>
        </div>


        @for (int i = 0; i < Model.Exhibition.Webpages.Count; i++)
        {
            <div class="form-group">
                @Html.LabelFor(m => Model.Exhibition.Webpages[i].Website.WebsiteName, (Model.Exhibition.Webpages[i].Website.WebsiteName.ToString() + " URL"), htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(m => m.Exhibition.Webpages[i].Id)
                    @Html.HiddenFor(m => m.Exhibition.Webpages[i].Website.Id)
                    @Html.EditorFor(m => m.Exhibition.Webpages[i].Url, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Exhibition.Webpages[i].Url, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-info" />
            </div>
        </div>
    </div>
}
