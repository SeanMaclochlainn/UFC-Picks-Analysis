@model FightData.UI.ViewModels.Reconciliation.EntityReconciliation

<h2>Data Reconciliation</h2>

<table class="table">
    <thead>
        <tr>
            <th>Website</th>
            <th>Url</th>
        </tr>
    </thead>
    @foreach (var webpage in Model.Exhibition.Webpages)
    {
        <tr>
            <td>
                @webpage.Website.WebsiteName
            </td>
            <td>
                <a href="@webpage.Url">@webpage.Url</a>
            </td>
        </tr>
    }
</table>
<p></p>

@using (Html.BeginForm("EntityReconciliation", "Exhibition"))
{
    @Html.HiddenFor(m => m.Exhibition.Id)
    <table class="table">
        <thead>
            <tr>
                <th>Analyst</th>
                <th>Pick Text</th>
                <th>Pick</th>
                <th>Cancel</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ReconciliationEntities.Picks.Count; i++)
            {
                @Html.HiddenFor(m => m.ReconciliationEntities.Picks[i].CorrectAnalystId)
                <tr>
                    <td>@Model.ReconciliationEntities.Picks[i].AnalystName</td>
                    <td>@Model.ReconciliationEntities.Picks[i].PickText</td>
                    <td>@Html.DropDownListFor(m => m.ReconciliationEntities.Picks[i].CorrectFighterId, Model.Fighters, "", null)</td>
                    <td>@Html.CheckBoxFor(m => m.ReconciliationEntities.Picks[i].Cancelled)</td>
                </tr>
            }
        </tbody>
    </table>
    <br/>
        <table class="table">
        <thead>
            <tr>
                <th>Fighter Name</th>
                <th>Odds</th>
                <th>Fighter</th>
                <th>Cancel</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ReconciliationEntities.Odds.Count; i++)
            {
                @Html.HiddenFor(m => m.ReconciliationEntities.Odds[i].FighterOdds)
                <tr>
                    <td>@Model.ReconciliationEntities.Odds[i].FighterName</td>
                    <td>@Model.ReconciliationEntities.Odds[i].FighterOdds</td>
                    <td>@Html.DropDownListFor(m => m.ReconciliationEntities.Odds[i].CorrectFighterId, Model.Fighters, "", null)</td>
                    <td>@Html.CheckBoxFor(m => m.ReconciliationEntities.Odds[i].Cancelled)</td>
                </tr>
            }
        </tbody>
    </table>

    <input type="submit" value="Submit" class="btn btn-info" />
}
<p></p>
<table class="table">
    <thead>
        <tr>
            <th>Winner</th>
            <th>Loser</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Fight fight in Model.Exhibition.Fights)
        {
            <tr>
                <td>
                    @fight.Winner.FullName
                </td>
                <td>
                    @fight.Loser.FullName
                </td>
            </tr>
        }
    </tbody>
</table>
