@model FightData.Models.ViewModels.FightEventVM
@{
    ViewData["Title"] = "Index";
}

@foreach (var fightEvent in Model.FightEvents)
{
    <table class="table">
        <thead>
            <tr>
                <th class="text-center" colspan="@(Model.Analysts.Count + 2)">
                    @fightEvent.EventName
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    Winner
                </td>
                <td>
                    Loser
                </td>
                @foreach (var analyst in Model.Analysts)
                {
                    <td>
                        @analyst.Name
                    </td>
                }
            </tr>
            @foreach (var fight in fightEvent.Fights)
            {
                <tr>
                    <td class="bg-success">
                        @fight.Winner.FullName
                    </td>
                    <td class="bg-danger">
                        @fight.Loser.FullName
                    </td>
                    @foreach (var analyst in Model.Analysts)
                    {
                        if (analyst.HasPick(fight))
                        {
                            <td class="@(analyst.GetPick(fight).Correct() ? "bg-success" : "bg-danger")">
                                @analyst.GetNameOfPick(fight)
                            </td>
                        }
                        else
                        {
                            <td></td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
}
