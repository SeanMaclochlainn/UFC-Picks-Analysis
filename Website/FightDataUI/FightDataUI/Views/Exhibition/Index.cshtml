@model FightDataUI.ViewModels.ExhibitionVM
@{
    ViewData["Title"] = "Index";
}

<h2>Exhibitions</h2>

<table>
    <thead>
        <tr>
            <th>Name</th>
            @foreach (var website in WebpageFinder.WithCustomContext(Model.Context).GetAllWebsites())
            {
                <th>
                    @website.WebsiteName
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var exhibition in Model.Exhibitions)
        {
            <tr>
                <td>
                    @exhibition.Name
                </td>

                @foreach (var website in WebpageFinder.WithCustomContext(Model.Context).GetAllWebsites())
                {
                    <td>
                        @exhibition.GetWebsiteUrl(website.WebsiteName)
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create new exhibition</a>
